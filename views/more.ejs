<html lang="th">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=1200, height=2000, initial-scale=1.0" />
  <title>
    <%= item.name %>
  </title>
  <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@400;600;700;800&display=swap" rel="stylesheet" />
  <style>
    :root {
      --font-ui: "Kanit", system-ui, -apple-system, "Noto Sans Thai", sans-serif;
      --on-dark: #fff;
      --ink: #e5e7eb;
      --ink-2: #d1d5db;
      --muted: #9ca3af;
      --brand-1: #f0a24e;
      --brand-2: #d88734;
      --brown: #3b281b;
      --panel: rgba(255, 255, 255, .06);
      --glass: rgba(255, 255, 255, .08);
      --ok: #22c55e;
      --radius-lg: 22px;
      --radius-xl: 28px;
      --hero-h: 560px;
      --bar-h: 120px;
    }

    html,
    body {
      height: 100%;
      margin: 0;
      background: #0b0c0e !important;
      color: var(--on-dark);
      font-family: var(--font-ui);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* ============ FRAME ============ */
    .stage {
      position: relative;
      width: 1200px;
      height: 2000px;
      overflow: hidden;
      border-radius: 0;
      background:
        linear-gradient(180deg, rgba(0, 0, 0, .15), rgba(0, 0, 0, .65) 55%, rgba(0, 0, 0, .85)),
        url('/img/firstpage/BGHomepage.png') center/cover no-repeat;
      box-shadow: 0 40px 100px rgba(0, 0, 0, .7), inset 0 0 0 1px rgba(255, 255, 255, .06);
    }

    /* Close */
    .close-btn {
      position: absolute;
      top: 18px;
      left: 18px;
      width: 64px;
      height: 64px;
      border-radius: 999px;
      /* วงกลม */
      display: grid;
      place-items: center;
      text-decoration: none;
      /* ไม่ให้มีเส้นใต้ */
      color: #4b5563;
      /* สี X */
      font-size: 40px;
      /* ขนาด X */
      line-height: 1;
      background: #ffffff;
      /* วงกลมสีขาว */
      border: 1px solid rgba(0, 0, 0, .06);
      /* เส้นขอบบางๆ */
      box-shadow: 0 10px 26px rgba(0, 0, 0, .25),
        inset 0 0 0 1px rgba(255, 255, 255, .6);
      -webkit-tap-highlight-color: transparent;
      z-index: 60;
      /* ลอยเหนือทุกอย่าง */
      transition: transform .08s ease, filter .18s ease;
    }

    .close-btn:hover {
      transform: translateY(-1px);
    }

    /* ============ HERO ============ */
    .hero {
      height: var(--hero-h);
      position: relative;
      overflow: hidden;
    }

    .hero img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transform: scale(1.03);
      filter: contrast(1.02) saturate(1.02);
    }

    .hero::after {
      content: "";
      position: absolute;
      inset: 0;
      background: linear-gradient(180deg, rgba(0, 0, 0, 0) 45%, rgba(0, 0, 0, .55));
    }

    .hero .price-chip {
      position: absolute;
      right: 20px;
      bottom: 20px;
      padding: 10px 16px;
      border-radius: 999px;
      font-weight: 900;
      letter-spacing: .3px;
      background: linear-gradient(180deg, var(--brand-1), var(--brand-2));
      border: 1px solid rgba(255, 255, 255, .18);
      box-shadow: 0 10px 24px rgba(0, 0, 0, .35), inset 0 0 0 1px rgba(255, 255, 255, .1);
    }

    /* ============ CONTENT ============ */
    .sheet {
      position: absolute;
      inset: calc(var(--hero-h) - 40px) 24px var(--bar-h) 24px;
      background: linear-gradient(180deg, rgba(255, 255, 255, .10), rgba(255, 255, 255, .03));
      border: 1px solid rgba(255, 255, 255, .12);
      border-radius: var(--radius-xl);
      box-shadow: 0 24px 60px rgba(0, 0, 0, .45);

      /* เลื่อนในตัวเองและซ่อนสกรอลบาร์ */
      overflow-y: auto;
      -webkit-overflow-scrolling: touch;
      overscroll-behavior: contain;
      scrollbar-width: none;
      /* Firefox */
      -ms-overflow-style: none;
      /* IE/Edge */
      padding: 26px 28px 180px;
    }

    .sheet::-webkit-scrollbar {
      width: 0;
      height: 0;
      display: none;
    }

    .hero .price-chip {
      display: none;
    }

    .title {
      font-size: 52px;
      font-weight: 800;
      margin: 4px 0 6px;
      text-shadow: 0 3px 12px rgba(0, 0, 0, .5);
    }

    .subtitle {
      color: var(--ink);
      font-size: 26px;
      margin: 0 0 18px;
    }

    /* Groups (accordion-ish) */
    .group {
      border-top: 1px solid rgba(255, 255, 255, .1);
      padding: 18px 0;
    }

    .group:first-of-type {
      border-top: 0;
    }

    .group-head {
      display: flex;
      align-items: center;
      justify-content: space-between;
      cursor: pointer;
      user-select: none;
    }

    .group-head h3 {
      margin: 0;
      font-size: 32px;
      font-weight: 800;
    }

    .group-head .hint {
      color: var(--ink);
      font-size: 22px;
      font-weight: 600;
    }

    .caret {
      width: 28px;
      height: 28px;
      transform: rotate(0deg);
      transition: transform .18s ease;
    }

    .group.is-open .caret {
      transform: rotate(180deg);
    }

    .values {
      margin-top: 16px;
      display: grid;
      gap: 10px;
    }

    .opt {
      display: grid;
      grid-template-columns: 42px 1fr auto;
      align-items: center;
      gap: 14px;
      padding: 12px 14px;
      border-radius: 16px;
      background: rgba(0, 0, 0, .35);
      border: 1px solid rgba(255, 255, 255, .08);
    }

    .opt input {
      appearance: none;
      width: 26px;
      height: 26px;
      border-radius: 6px;
      border: 2px solid var(--ink-2);
      background: transparent;
      position: relative;
    }

    .opt input:checked {
      border-color: transparent;
      background: linear-gradient(180deg, var(--brand-1), var(--brand-2));
      box-shadow: 0 0 0 2px rgba(0, 0, 0, .25) inset;
    }

    .opt input:checked::after {
      content: "";
      position: absolute;
      left: 7px;
      top: 4px;
      width: 8px;
      height: 14px;
      border: 3px solid #fff;
      border-top: 0;
      border-left: 0;
      transform: rotate(45deg);
    }

    .opt .name {
      font-size: 28px;
      font-weight: 700;
    }

    .opt .extra {
      font-size: 26px;
      font-weight: 800;
      color: #fff;
      opacity: .95;
    }

    /* Note box */
    .note {
      margin-top: 16px;
      background: rgba(0, 0, 0, .35);
      border: 1px solid rgba(255, 255, 255, .12);
      border-radius: 18px;
      padding: 16px;
    }

    .note label {
      display: block;
      font-weight: 700;
      margin-bottom: 8px;
    }

    .note textarea {
      width: 100%;
      min-height: 120px;
      resize: vertical;
      background: transparent;
      border: 0;
      outline: none;
      color: #fff;
      font-family: var(--font-ui);
      font-size: 26px;
    }

    /* ============ STICKY BAR ============ */
    .bar {
      position: absolute;
      left: 0;
      right: 0;
      bottom: 0;
      height: var(--bar-h);
      background: rgba(0, 0, 0, .6);
      backdrop-filter: blur(6px);
      border-top: 1px solid rgba(255, 255, 255, .08);
      display: grid;
      grid-template-columns: 340px 1fr 380px;
      gap: 18px;
      align-items: center;
      padding: 0 24px;
    }

    /* quantity */
    .qty {
      display: inline-flex;
      align-items: center;
      gap: 14px;
      justify-self: start;
      background: rgba(0, 0, 0, .35);
      border: 1px solid rgba(255, 255, 255, .12);
      border-radius: 18px;
      padding: 10px 14px;
    }

    .step {
      width: 56px;
      height: 56px;
      border-radius: 14px;
      border: 1px solid rgba(255, 255, 255, .14);
      background: rgba(0, 0, 0, .55);
      color: #fff;
      font-weight: 900;
      font-size: 36px;
      display: grid;
      place-items: center;
      cursor: pointer;
      user-select: none;
      transition: transform .06s ease;
    }

    .step:active {
      transform: translateY(1px);
    }

    .qty .count {
      width: 72px;
      text-align: center;
      font-size: 34px;
      font-weight: 900;
    }

    /* live total */
    .total {
      justify-self: start;
      font-size: 34px;
      font-weight: 900;
      letter-spacing: .3px;
      color: #fff;
      opacity: .95;
    }

    /* Add button */
    .btn {
      font-family: var(--font-ui);
      height: 72px;
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, .12);
      display: grid;
      place-items: center;
      color: #fff;
      font-weight: 900;
      letter-spacing: .5px;
      text-decoration: none;
      cursor: pointer;
      background:
        radial-gradient(140px 100px at 50% 0%, rgba(255, 255, 255, .18), rgba(255, 255, 255, 0) 70%),
        linear-gradient(180deg, var(--brand-1), var(--brand-2));
      box-shadow: inset 0 0 0 1px rgba(255, 255, 255, .08), 0 16px 34px rgba(0, 0, 0, .45);
      transition: transform .08s ease, filter .18s ease;
      font-size: 32px;
    }

    .btn:hover {
      transform: translateY(-1px);
      filter: saturate(1.05);
    }

    /* form reset bits */
    fieldset {
      border: 0;
      margin: 0;
      padding: 0;
    }
  </style>
</head>

<body>
  <main class="stage">
    <a href="/main" class="close-btn">×</a>

    <div class="hero">
      <img src="/img/menu/<%= item.category_id %>/<%= item.name_eng %>.png" alt="<%= item.name %>">
      <div class="price-chip">฿ <%= Number(item.base_price) %>
      </div>
    </div>

    <section class="sheet">
      <h1 class="title">
        <%= item.name %>
      </h1>
      <% if (item.detail) { %>
        <p class="subtitle">
          <%= item.detail %>
        </p>
        <% } %>

          <form action="/add-to-cart" method="POST" id="addForm">

            <input type="hidden" name="menu_item_id" value="<%= item.menu_item_id %>">
            <input type="hidden" name="quantity" id="qty" value="1">

            <% options.forEach(function(group, gi){ %>
              <div class="group is-open" data-gi="<%= gi %>">
                <div class="group-head" onclick="toggleGroup(this)">
                  <div>
                    <h3>
                      <%= group.translated_name || group.name %>
                    </h3>
                    <% if (group.max_select) { %>
                      <div class="hint">
                        <%= lang==='th' ? 'เลือกได้สูงสุด ' : 'Choose up to ' %>
                          <%= group.max_select %>
                            <%= lang==='th' ?'ตัว':'' %>
                      </div>
                      <% } %>
                  </div>
                  <svg class="caret" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 8l4 4 4-4" />
                  </svg>
                </div>

                <div class="values">
                  <% group.values.forEach(function(opt){ %>
                    <label class="opt">
                      <input type="<%= group.max_select>1 ? 'checkbox' : 'radio' %>"
                        name="options_<%= group.option_group_id %>[]"
                        value="<%= opt.option_value_id %>|<%= opt.extra_price %>"
                        data-extra="<%= Number(opt.extra_price) %>" onchange="handleOptionChange(event)" />
                      <span class="box"></span>
                      <span class="name">
                        <%= opt.translated_name || opt.name %>
                      </span>
                      <span class="extra">
                        <% if (opt.extra_price>0) { %>฿<%= opt.extra_price %>
                            <% } else { %>฿0<% } %>
                      </span>
                    </label>
                    <% }) %>
                </div>
              </div>
              <% }) %>

                <div class="note">
                  <label style="font-size: 26px;">
                    <%= lang==='th' ? 'รายละเอียดเพิ่มเติม' : 'Extra notes' %>
                  </label>
                  <textarea name="note"
                    placeholder="<%= lang==='th' ? 'เช่น ไม่เอาผัก / เผ็ดน้อย' : 'e.g. no veggies / less spicy' %>"></textarea>
                </div>
          </form>
    </section>

    <div class="bar">
      <div class="qty">
        <div class="step" onclick="changeQty(-1)">−</div>
        <div class="count" id="qtyDisplay">1</div>
        <div class="step" onclick="changeQty(1)">+</div>
      </div>

      <div class="total" id="totalText">฿ <%= Number(item.base_price) %>
      </div>

      <button class="btn" form="addForm" type="submit" id="addBtn">
        <%= lang==='th' ? 'ใส่ตะกร้า' : 'Add to cart' %>
      </button>
    </div>
  </main>
</body>
<script>
  const BASE_PRICE = parseFloat("<%= item.base_price %>");

  function toggleGroup(head) {
    head.closest('.group').classList.toggle('is-open');
  }

  function changeQty(change) {
    const qtyInput = document.getElementById("qty");
    const qtyDisplay = document.getElementById("qtyDisplay");
    let current = parseInt(qtyInput.value);
    let next = current + change;
    if (next < 1) next = 1;
    qtyInput.value = next;
    qtyDisplay.textContent = next;
    updateTotal();
  }

  function handleOptionChange(event) {
    const input = event.target;
    const group = input.closest('.group');

    // ✅ ตรวจว่าชื่อกลุ่มมีคำว่า "ซอส" หรือ "sauce"
    const groupName = group.querySelector("h3")?.innerText || "";
    const isSauce = /ซอส|sauce/i.test(groupName);

    // ✅ ถ้าเป็นซอส → จำกัดเลือกได้สูงสุด 2, ถ้าไม่ใช่ → ใช้ค่า max เดิม
    const max = isSauce ? 2 : (parseInt(group.dataset.max) || 1);

    const boxes = group.querySelectorAll('input[type="checkbox"]');
    const checked = Array.from(boxes).filter(b => b.checked);

    // ✅ ถ้าเลือกเกิน ให้ยกเลิกอันแรกที่เลือกไว้ก่อนหน้า
    if (checked.length > max) {
      checked[0].checked = false;
    }

    updateTotal();
  }

  function updateTotal() {
    let extra = 0;
    document.querySelectorAll('.values input:checked').forEach(i => {
      extra += Number(i.dataset.extra || 0);
    });
    const qty = parseInt(document.getElementById('qty').value) || 1;
    const total = (BASE_PRICE + extra) * qty;
    document.getElementById('totalText').textContent = '฿ ' + total.toFixed(0);
  }

  // ✅ ซ่อนราคาที่เป็น 0 (฿0)
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.opt .extra').forEach(span => {
      if (span.textContent.trim() === '฿0') span.style.display = 'none';
    });
  });
</script>

</html>