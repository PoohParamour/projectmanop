  <section id="menuSection">
    <style>
      #menuSection {
        --brand: #10B34A;
        --ink: #6b7280;
        --ink-strong: #374151;
        --divider: #e5e7eb;
      }

      .menu-topbar {
        position: sticky;
        top: 0;
        z-index: 20;
        background: #fff;
        height: 72px;
        display: flex;
        align-items: center;
        padding: 6px 30px;
        border-bottom: 2px solid var(--divider);
      }

      /* ‡∏•‡∏ö‡∏õ‡∏∏‡πà‡∏° tab-icon ‡πÄ‡∏°‡∏ô‡∏π 3 ‡∏Ç‡∏µ‡∏î‡∏≠‡∏≠‡∏Å */

      .chip-viewport {
        flex: 1 1 auto;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        scroll-behavior: smooth;
        scrollbar-width: none;
        -webkit-mask-image: linear-gradient(to right, transparent 0, black 28px, black calc(100% - 28px), transparent 100%);
        mask-image: linear-gradient(to right, transparent 0, black 28px, black calc(100% - 28px), transparent 100%);
      }

      .chip-viewport::-webkit-scrollbar {
        display: none;
      }

      .chip-track {
        display: flex;
        align-items: center;
        gap: 28px;
        padding: 0 8px;
      }

      .chip {
        flex: 0 0 auto;
        color: var(--ink);
        font-size: 32px;
        font-weight: 800;
        padding: 0 16px;
        background: transparent;
        border: none;
        white-space: nowrap;
        cursor: pointer;
        transition: color .18s ease;
      }

      .chip:hover {
        color: var(--ink-strong);
      }

      .chip.is-active {
        color: var(--brand);
      }

      .menu-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 40px;
        padding: 24px;
      }

      .menu-card {
        background: #FFFFFF80;
        border-radius: 30px;
        padding-bottom: 10px;
        box-shadow: 0 12px 24px rgba(0, 0, 0, .35);
        overflow: hidden;
        color: #000;
        display: flex;
        flex-direction: column;
        /* ‚úÖ ‡∏ó‡∏≥‡πÉ‡∏´‡πâ‡∏à‡∏±‡∏î layout ‡∏†‡∏≤‡∏¢‡πÉ‡∏ô‡πÄ‡∏õ‡πá‡∏ô‡πÅ‡∏ô‡∏ß‡∏ï‡∏±‡πâ‡∏á */
        height: 100%;
        /* ‚úÖ ‡πÉ‡∏´‡πâ‡∏ó‡∏∏‡∏Å‡∏Å‡∏≤‡∏£‡πå‡∏î‡∏™‡∏π‡∏á‡πÄ‡∏ó‡πà‡∏≤‡∏Å‡∏±‡∏ô */
      }

      .menu-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 4px;
      }

      .menu-body {
        flex: 1;
        /* ‚úÖ ‡∏¢‡∏∑‡∏î‡πÄ‡∏ï‡πá‡∏°‡∏û‡∏∑‡πâ‡∏ô‡∏ó‡∏µ‡πà‡∏Å‡∏≤‡∏£‡πå‡∏î */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        /* ‚úÖ ‡∏î‡∏±‡∏ô‡∏™‡πà‡∏ß‡∏ô meta ‡πÑ‡∏õ‡∏ä‡∏¥‡∏î‡∏•‡πà‡∏≤‡∏á */
        padding: 10px 14px;
      }

      .menu-title {
        text-align: center;
        margin: 6px 0 10px;
        font-weight: 600;
        font-size: 42px;
        min-height: 2.8em;
        /* ‚úÖ ‡∏ä‡πà‡∏ß‡∏¢‡πÉ‡∏´‡πâ‡∏ö‡∏£‡∏£‡∏ó‡∏±‡∏î‡∏ä‡∏∑‡πà‡∏≠‡∏™‡∏π‡∏á‡πÄ‡∏ó‡πà‡∏≤‡∏Å‡∏±‡∏ô‡πÅ‡∏°‡πâ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏ï‡πà‡∏≤‡∏á */
      }

      .menu-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .price {
        font-weight: 500;
        font-size: 40px;
      }

      .add-btn {
        width: 66px;
        height: 66px;
        border-radius: 50%;
        display: flex;
        /* ‡∏à‡∏±‡∏î‡πÉ‡∏´‡πâ‡∏≠‡∏¢‡∏π‡πà‡∏Å‡∏•‡∏≤‡∏á‡∏ó‡∏±‡πâ‡∏á‡πÅ‡∏ô‡∏ß‡∏ï‡∏±‡πâ‡∏á‡πÅ‡∏•‡∏∞‡πÅ‡∏ô‡∏ß‡∏ô‡∏≠‡∏ô */
        align-items: center;
        justify-content: center;
        font-size: 48px;
        /* ‡∏Ç‡∏ô‡∏≤‡∏î‡πÄ‡∏Ñ‡∏£‡∏∑‡πà‡∏≠‡∏á‡∏´‡∏°‡∏≤‡∏¢ + */
        font-weight: 500;
        color: #fff;
        text-decoration: none;
        background: linear-gradient(180deg, #f0a24e, #d88734);
        border: 1px solid rgba(255, 255, 255, .08);
        box-shadow: 0 8px 18px rgba(0, 0, 0, .35),
          inset 0 0 0 1px rgba(255, 255, 255, .06);
        transition: transform .08s ease, filter .18s ease;
        cursor: pointer;
      }

      /* ==============================
   üéØ Responsive ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö iPad Gen 7‚Äì10
   ============================== */
      @media (max-width: 1024px) {
        .menu-topbar {
          height: 64px;
          padding: 4px 16px;
        }

        .chip {
          font-size: 22px;
          padding: 0 10px;
        }

        .chip-track {
          gap: 18px;
        }

        .menu-grid {
          grid-template-columns: repeat(2, 1fr);
          gap: 24px;
          padding: 16px;
        }

        .menu-card {
          border-radius: 22px;
        }

        .menu-title {
          font-size: 28px;
        }

        .price {
          font-size: 28px;
        }

        .add-btn {
          width: 52px;
          height: 52px;
          font-size: 36px;
        }
      }

      /* ==============================
   üéØ ‡πÅ‡∏ô‡∏ß‡∏ô‡∏≠‡∏ô (Landscape)
   ============================== */
      @media (max-height: 850px) and (orientation: landscape) {
        .menu-grid {
          grid-template-columns: repeat(3, 1fr);
          gap: 20px;
        }

        .menu-title {
          font-size: 24px;
        }

        .price {
          font-size: 24px;  
        }

        .add-btn {
          width: 46px;
          height: 46px;
          font-size: 32px;
        }
      }

      
    </style>

    <div class="menu-topbar">
      <div class="chip-viewport" id="chipViewport">
        <div class="chip-track" id="chipBar">
          <% const ADDED=new Set(); %>
            <a class="chip is-active" data-cat="all">
              <%= lang==="th" ? "‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î" : "All" %>
            </a>
            <% data.forEach(item=> {
              const key = item.category_id;
              if (!ADDED.has(key)) { ADDED.add(key); %>
              <a class="chip" data-cat="<%= key %>">
                <%= CAT_LABELS[key] || (lang==="th" ? "‡∏´‡∏°‡∏ß‡∏î " + key : "Category " + key) %>
              </a>
              <% }}); %>
        </div>
      </div>
    </div>

    <div class="menu-grid" id="menuGrid">
      <% data.forEach(item=> { %>
        <article class="menu-card" data-cat="<%= item.category_id %>">
          <img class="menu-media" src="/img/menu/<%= item.category_id %>/<%= item.name_eng %>.png"
            alt="<%= item.name_thai %>">
          <div class="menu-body">
            <h3 class="menu-title">
              <%= item.name %>
            </h3>
            <div class="menu-meta">
              <div class="price">‡∏ø <%= Number(item.base_price) %>
              </div>
              <a href="/more/<%= item.menu_item_id %>" class="add-btn">+</a>
            </div>
          </div>
        </article>
        <% }); %>
    </div>

    <script>
      (() => {
        const bar = document.getElementById('chipBar');
        const chips = () => bar ? Array.from(bar.querySelectorAll('.chip')) : [];
        const cards = Array.from(document.querySelectorAll('#menuSection #menuGrid .menu-card'));
        if (!bar || !chips().length || !cards.length) return;

        function activate(cat, btn) {
          chips().forEach(c => c.classList.toggle('is-active', c === btn || c.dataset.cat === cat));
          cards.forEach(c => {
            const show = (cat === 'all') || (c.dataset.cat === cat);
            c.style.display = show ? '' : 'none';
          });
          if (btn) btn.scrollIntoView({ behavior: 'smooth', inline: 'center' });
          document.querySelector('.container')?.scrollTo({ top: 0, behavior: 'smooth' });
        }

        bar.addEventListener('click', e => {
          const btn = e.target.closest('.chip');
          if (!btn) return;
          activate(btn.dataset.cat || 'all', btn);
        });

        const first = chips()[0];
        if (first) activate(first.dataset.cat || 'all', first);
      })();
    </script>
  </section>